<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unlam.dimequiensoy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiensoy"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quiensoy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.GameActivity"></activity>
        <activity android:name=".activities.SelectOptionGameActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.RegisterActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>